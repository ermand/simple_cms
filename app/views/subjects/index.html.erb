<% @page_title = "Subjects" %>

<div class="subjects index">
  <h2>Subjects</h2>

  <div><%= pluralize(@subjects.size, 'subject') %> found.  <%= link_to("Add New Subject", {:action => 'new'} , :class => 'btn btn-success btn-sm') %></div>
  <hr>

  <table class="table table-striped table-bordered datatables" summary="Subject list">
    <tr>
      <th></th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject|  %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td class="center"><%= status_tag(subject.visible) %></td>
      <td class="center"><%= subject.pages.size %></td>
      <td>
        <%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'btn btn-info btn-sm') %>
        <%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'btn btn-default btn-sm') %>
        <%= link_to("Delete", {:action => 'delete', :id => subject.id}, :class => 'btn btn-danger btn-sm') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
