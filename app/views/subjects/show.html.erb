<% @page_title = "Show subject" %>

<%= link_to("<< Back to List", {:action => 'index'} , :class => 'btn btn-default') %>

<div class="subjects show">
  <h2>Show Subject</h2>

  <table class="table table-striped table-bordered datatables" summary="Subject detail view">
    <tr>
      <th>Name</th>
      <th><%= @subject.name %></th>
    </tr>
    <tr>
      <th>Position</th>
      <th><%= @subject.position %></th>
    </tr>
    <tr>
      <th>Visible?</th>
      <th><%= @subject.visible ? 'true' : 'false' %></th>
    </tr>
    <tr>
      <th>Created</th>
      <th><%= @subject.created_at %></th>
    </tr>
    <tr>
      <th>Updated</th>
      <th><%= @subject.updated_at %></th>
    </tr>
  </table>
</div>
