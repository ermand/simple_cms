<% @page_title = "Admin Login" %>

<div class="panel panel-plus">
  <div class="panel-heading">
      <h3 class="panel-title">
          Login form
      </h3>
  </div>
  <div class="panel-body">

    <%= form_tag({:action => 'attempt_login'}, :class => 'form-horizontal') do |f| %>

      <%= error_messages_for(@subject) %>

      <div class="form-group">
        <%= label_tag(:username, nil, class: 'col-xs-3 col-sm-3 control-label')  %>
        <div class="col-xs-9 col-sm-6 col-md-6 col-lg-6">
          <%= text_field_tag(:username, nil, :class => 'form-control') %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag(:password, nil, class: 'col-xs-3 col-sm-3 control-label')  %>
        <div class="col-xs-9 col-sm-6 col-md-6 col-lg-6">
          <%= password_field_tag(:password, nil, :class => 'form-control') %>
        </div>
      </div>

      <%= render(:partial => "partials/submit_button")  %>

    <% end %>

  </div>
</div>
