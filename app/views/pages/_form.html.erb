<%= error_messages_for(@page) %>

<div class="form-group">
  <label class="col-sm-3 control-label" for="subject_id">Page</label>
  <div class="col-sm-6">
    <%= f.select :subject_id, @subjects.collect {|s| [ s.name, s.id ] }, { :include_blank => true }, {:class => 'form-control'} %>
  </div>
</div>

<div class="form-group">
  <%= f.label(:name, :class => 'col-sm-3 control-label')  %>
  <div class="col-sm-6">
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </div>
</div>

<div class="form-group">
  <%= f.label(:permalink, :class => 'col-sm-3 control-label')  %>
  <div class="col-sm-6">
    <%= f.text_field(:permalink, {:class => 'form-control'}) %>
  </div>
</div>

<div class="form-group">
  <%= f.label(:position, :class => 'col-sm-3 control-label')  %>
  <div class="col-sm-6">
    <%= f.select(:position, 1..@page_count, {:class => 'form-control'}) %>
  </div>
</div>

<div class="form-group">
  <%= f.label(:visible, :class => 'col-sm-3 control-label')  %>
  <div class="col-sm-6">
    <%= f.check_box(:visible) %>
  </div>
</div>
