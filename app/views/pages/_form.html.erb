<table summary="Subejct form fields">
  <tr>
    <th>Subject</th>
    <th><%= f.select :subject_id, @subjects.collect {|e| [ e.name, e.id ] }, { :include_blank => true } %></th>
  </tr>
  <tr>
    <th>Name</th>
    <th><%= f.text_field(:name) %></th>
  </tr>
  <tr>
    <th>Permalink</th>
    <th><%= f.text_field(:permalink) %></th>
  </tr>
  <tr>
    <th>Position</th>
    <th><%= f.text_field(:position) %></th>
  </tr>
  <tr>
    <th>Visible</th>
    <th><%= f.text_field(:visible) %></th>
  </tr>
</table>
