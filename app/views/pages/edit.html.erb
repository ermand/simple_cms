<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link')  %>

<div class="page edit">
  <h2>Update Page</h2>

  <%= form_for(:page, :url => {:action => 'update', :id => @page.id}) do |f| %>
    <table summary="Subejct form fields">
      <tr>
        <th>Subject</th>
        <th><%= f.select :subject_id, @subjects.collect {|e| [ e.name, e.id ] } %></th>
      </tr>
      <tr>
        <th>Name</th>
        <th><%= f.text_field(:name) %></th>
      </tr>
      <tr>
        <th>Permalink</th>
        <th><%= f.text_field(:permalink) %></th>
      </tr>
      <tr>
        <th>Position</th>
        <th><%= f.text_field(:position) %></th>
      </tr>
      <tr>
        <th>Visible</th>
        <th><%= f.text_field(:visible) %></th>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Update Subject") %>
    </div>

  <% end %>
</div>
