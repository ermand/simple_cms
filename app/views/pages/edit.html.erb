<% @page_title = "Edit page" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link')  %>

<div class="page edit">
  <h2>Update Page</h2>

  <%= form_for(:page, :url => {:action => 'update', :id => @page.id }, :html => {:class => 'form-horizontal'}) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <%= render(:partial => "partials/submit_button")  %>

  <% end %>
</div>
