<% @page_title = "Delete User" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'btn btn-default')  %>

<div class="user edit">
  <h2>Delete User</h2>

  <%= form_tag({:action => 'destroy', :id => @user.id}, :html => {:class => 'form-horizontal'}) do %>
    <p>Are you sure you want to permanently delete this user?</p>

    <p class="reference-name"><%= @user.name %></p>

    <%= render(:partial => "partials/submit_button")  %>

  <% end %>
</div>
