<% @page_title = "Admin Users" %>

<div class="Users index">
  <h2>Admin Users</h2>

  <div><%= pluralize(@admin_users.size, 'user') %> found.  <%= link_to("Add New User", {:action => 'new'} , :class => 'btn btn-success btn-sm') %></div>
  <hr>

  <table class="table table-striped table-bordered datatables" summary="Admin Users list">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user|  %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= admin_user.username %></td>
      <td><%= admin_user.name %></td>
      <td><%= mail_to(admin_user.email) %></td>
      <td class="center"><%= admin_user.created_at %></td>
      <td class="center"><%= admin_user.updated_at %></td>
      <td>
        <%= link_to("Edit", {:action => 'edit', :id => admin_user.id}, :class => 'btn btn-default btn-sm') %>
        <%= link_to("Delete", {:action => 'delete', :id => admin_user.id}, :class => 'btn btn-danger btn-sm') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
